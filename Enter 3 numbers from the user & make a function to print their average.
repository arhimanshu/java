// Enter 3 numbers from the user & make a function to print their average.
import java.util.*;
public class Function{                               //phle class bnai jaise as usual bnate h
    public static int average(int a,int b,int c){   //fir function bnaya ie in this case average name se and also iss-                                          no.1
         int z=(a+b+c)/3;                           // baar void ki jagah int h kyuki hume return bhi krni h value
         return z;
    
}
    public static void main(String[] args){                  //phle main function chalega ie ye vala ie no.2 vala then no.1 vala chalega                        no.2
        //count=0;
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
       // count++;
        int b=sc.nextInt();
       // count++
        int c=sc.nextInt();
        //count++;
      int k=average(a,b,c);//a,b,c pass kiye humne average m and sath hi sath jo return hoke aaegi value function m jane k baad usko k m store kar liya
      System.out.println("the average of these number is" + k);
      
      //or directly System.out.println("the average of these number is" + average(a,b,c)); and int k=average(a,b,c) ko bhi comment kr dete
    }
}
